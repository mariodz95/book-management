<p id="notice"><%= notice %></p>

<h1><%= @books.length %> books</h1>

<% @books.each do |book| %>
  <div class="card w-100">
    <div class="card-body">
      <h4 class="card-title"><%= book.name %></h5>
      <div class="row">
        <div class="col-8">
          <p class="card-text"><%= book.author %></p>
          <p class="card-text"><%= book.publisher %></p>
        </div>
        <div class="col-4">
          <%= link_to 'Show', book, :class => 'btn btn-primary' %>
          <%= link_to 'Edit', edit_book_path(book), :class => 'btn btn-primary' if user_signed_in? %>
          <%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-primary' if user_signed_in? %>
        </div>
      </div>
    </div>
  </div>
<% end %>


<br>

